---
// Props for the component
export interface CaptionedImageGalleryProps {
  layout: "2x2" | "4x1" | "1x4";
  captions: string | string[];
}

const { layout, captions } = Astro.props as CaptionedImageGalleryProps;
const isSingleCaption = typeof captions === "string";
const gridTemplateColumns = layout === "2x2" ? "grid-cols-2" : "grid-cols-1";
const gridTemplateRows = layout === "4x1" ? "grid-rows-4" : "grid-rows-1";
---

<div class={`grid ${gridTemplateColumns} ${gridTemplateRows} gap-4`}>
  <slot name="images" />
</div>
{
  isSingleCaption ? (
    <figcaption class="text-center mt-4">{captions}</figcaption>
  ) : (
    captions.map((caption, index) => (
      <figcaption class="text-center mt-4">
        {caption}
      </figcaption>
    ))
  )
}
